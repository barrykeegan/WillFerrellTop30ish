@model WillFerrellTop30ish.Models.Customer

@{
    ViewBag.Title = "SignIn";
}

<br />

@using (Html.BeginForm("SignIn", "Customer", FormMethod.Post))
{
    <div class="form">
        <h2>Sign In</h2>
        <h3>@ViewBag.Status</h3>
        <h3>@Html.ValidationSummary()</h3>
        <h3>Not a member yet? Click here to @Html.ActionLink("Register", "Register", "Customer").</h3>
        @Html.LabelFor(c => c.Email, "Your Email")
        <div class="textbox">@Html.TextBoxFor(c => c.Email, new { type = "email" }) </div>
        @Html.LabelFor(c => c.Password, "Password")
        <div class="textbox">   @Html.TextBoxFor(c => c.Password, new { type = "password" }) </div>
        <input type="submit" value="Submit">
        <br />
    </div>
}

